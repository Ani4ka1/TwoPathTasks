<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Grid Layout для кнопок категорий -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnCount="2"
            android:rowCount="3"
            android:paddingBottom="40dp">

            <!-- Кнопки категорий с изображениями и текстом -->
            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded_button_blue"
                android:layout_margin="8dp"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:id="@+id/btnWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/workim"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/txtWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work"
                    android:fontFamily="@font/evolventbold"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_below="@id/btnWork"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded_button_purple"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp">
                <ImageButton
                    android:id="@+id/btnHobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hobbyim"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/txtHobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/evolventbold"
                    android:textSize="20dp"
                    android:text="Hobby"
                    android:textColor="@color/white"
                    android:layout_below="@id/btnHobby"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="8dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded_button_purple"
                android:layout_margin="8dp"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:id="@+id/btnStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/studyim"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txtStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/evolventbold"
                    android:textSize="20dp"
                    android:text="Study"
                    android:layout_below="@id/btnStudy"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="8dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded_button_green"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp">
                <ImageButton
                    android:id="@+id/btnSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sportim"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/txtSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/evolventbold"
                    android:textSize="20dp"
                    android:text="Sport"
                    android:layout_below="@id/btnSport"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded_button_green"
                android:layout_margin="8dp"
                android:layout_marginRight="20dp">
                <ImageButton
                    android:id="@+id/btnHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/healthim"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txtHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/evolventbold"
                    android:textSize="20dp"
                    android:text="Health"
                    android:layout_below="@id/btnHealth"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="8dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded_button_blue"
                android:layout_margin="8dp"
                android:layout_marginLeft="20dp">
                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/homeim"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/txtHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/evolventbold"
                    android:textSize="20dp"
                    android:text="Home"
                    android:layout_below="@id/btnHome"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="12dp"/>
            </RelativeLayout>

        </GridLayout>

        <!-- View для отслеживания нажатий на пустое место и затемнения фона -->
        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone"
            android:clickable="true" />

        <!-- RelativeLayout для центрирования RecyclerView -->
        <RelativeLayout
            android:id="@+id/cardTaskContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:elevation="10dp"
            android:layout_centerInParent="true">

            <!-- RecyclerView для карточек -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCardTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <!-- Кнопка для отображения всех задач -->
            <Button
                android:id="@+id/btnViewAllTasks"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:text="View All Tasks"
                android:fontFamily="@font/evolventbold"
                android:background="@drawable/rounded_button_dark_green"
                android:textColor="@color/white"
                android:layout_below="@id/rvCardTasks"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="40dp"
                android:visibility="gone" />
        </RelativeLayout>

        <!-- Кнопка создания задач -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/imgCreateTask"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/addbuttom"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txtCreateTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/evolventaregular"
                android:textColor="@color/pastel_dark_green"
                android:text="Add new task"
                android:layout_below="@id/imgCreateTask"
                android:layout_centerHorizontal="true"
                android:paddingTop="8dp"/>
        </RelativeLayout>

        <!-- Кнопка для вызова бокового меню -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="16dp"
            android:layout_margin="16dp">
            <ImageButton
                android:id="@+id/imgMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        style="@style/NavMenuStyle"/>
</androidx.drawerlayout.widget.DrawerLayout>
